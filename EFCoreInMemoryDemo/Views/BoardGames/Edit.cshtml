@model EFCoreInMemoryDemo.ViewModels.BoardGameViewModel

@{
	ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PublishingCompany" class="control-label"></label>
				<input asp-for="PublishingCompany" class="form-control" />
				<span asp-validation-for="PublishingCompany" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="MinPlayers" class="control-label"></label>
				<input asp-for="MinPlayers" class="form-control" />
				<span asp-validation-for="MinPlayers" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="MaxPlayers" class="control-label"></label>
				<input asp-for="MaxPlayers" class="form-control" />
				<span asp-validation-for="MaxPlayers" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Price" class="control-label"></label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-success" />
				<a class="btn btn-info" asp-action="Index">Back to List</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
